extends layout

block content
  h1= title
  p This is Sequelize greeting you :)

  h2 Creating a new member
  form(action="/members/create", method="post")
    input(type="text", name="displayName")
    input(type="submit")

  h2 Members

  ul
  each member in members
    li
      = member.displayName
      | &nbsp;
      | (
      a(href="/members/" + member.id + "/destroy") Destroy
      | )
      ul
        li
          | Creating a new task:
          form(action="/members/" + member.id + "/tasks/create", method="post", style="display: inline")
            input(type="text", name="title")
            input(type="submit")
        each task in member.Tasks
          li
            = task.title
            | &nbsp;
            | (
            a(href="/members/" + member.id + "/tasks/" + task.id + "/destroy") Destroy
            | )
